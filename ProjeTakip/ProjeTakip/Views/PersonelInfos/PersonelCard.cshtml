@model IEnumerable<ProjeTakip.Model.Personel.PersonelInfos>

@{
    ViewBag.Title = "PersonelCard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card {
        background-clip: padding-box;
        box-shadow: 0px -17px 19px 12px rgba(67, 89, 113, 0.12) !important;
    }
</style>
<section class="content">

    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                        <div class="card bg-light d-flex flex-fill">
                            <div class="card-header text-muted border-bottom-0">
                                @item.Department
                            </div>
                            <div class="card-body pt-0">
                                <div class="row">
                                    <div class="col-7">
                                        <h2 class="lead"><b>@item.NameSurname</b></h2>
                                        <p class="text-muted text-sm"><b>About: </b> @item.Assignment </p>
                                        <ul class="ml-4 mb-0 fa-ul text-muted">
                                            <li class="small"><span class="fa-li"><i class="bx bx-envelope"></i></span> Mail: @item.EMail</li>
                                            <li class="small"><span class="fa-li"><i class="bx bx-phone"></i></span> Telephone: @item.PersonelTelNo</li>
                                        </ul>
                                    </div>
                                    <div class="col-5 text-center">
                                        <img src="@item.PersonelPhoto" alt="user-avatar" class="rounded-circle" style="height:100px; width:100px">
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="text-right">
                                    <a href="mailto:@item.EMail" class="btn btn-sm btn-primary">
                                        <i class="fas fa-comments"></i>Mail
                                    </a>
                                    <a href="tel:@item.PersonelTelNo" class="btn btn-sm btn-primary">
                                        <i class="fas fa-user"></i> Call
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                }

            </div>
        </div>



    </div>

</section>