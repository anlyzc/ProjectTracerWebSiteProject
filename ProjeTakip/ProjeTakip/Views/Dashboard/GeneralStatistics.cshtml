@model List<ProjeTakip.Model.Personel.PersonelInfos>
@{
    ViewBag.Title = "GeneralStatistics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/rg-1.0.0/datatables.min.css" />

<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/rg-1.0.0/datatables.min.js"></script>


<div class="card">
    <h5 class="card-header">Statistics List</h5>
    <div class="card-body">
        <div class="row">
            <div class="col md-9">
                <table id="statisticsList" class="table">
                    <thead>
                        <tr>
                            <th>Name and surname</th>
                            <th>Completed project</th>
                            <th>Uncompleted project</th>
                            <th>Total project</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var personel in Model)
                        {
                            <tr>
                                <td>@personel.NameSurname</td>
                                <td>@ViewBag.CompletedProjectsNum[personel.PersonelInfoId]</td>
                                <td>@ViewBag.UncompletedProjectsNum[personel.PersonelInfoId]</td>
                                <td>@ViewBag.TotalProjectNum[personel.PersonelInfoId]</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div class="col-md-3">
                <div class="card h-100">

                    <div class="card-body">
                        <ul class="p-0 m-0">
                            <li class="d-flex mb-4 pb-1">
                                <div class="avatar flex-shrink-0 me-3">
                                    <img src="~/TEMA/assets/img/icons/unicons/paypal.png" alt="User" class="rounded">
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <small class="text-muted d-block mb-1">Total Personel</small>

                                    </div>
                                    <div class="user-progress d-flex align-items-center gap-1">
                                        <h6 class="mb-0">@ViewBag.PersonelNum</h6>

                                    </div>
                                </div>
                            </li>
                            <li class="d-flex mb-4 pb-1">
                                <div class="avatar flex-shrink-0 me-3">
                                    <img src="~/TEMA/assets/img/icons/unicons/wallet.png" alt="User" class="rounded">
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <small class="text-muted d-block mb-1">Total Project</small>

                                    </div>
                                    <div class="user-progress d-flex align-items-center gap-1">
                                        <h6 class="mb-0">@ViewBag.ProjectNum</h6>

                                    </div>
                                </div>
                            </li>
                            <li class="d-flex mb-4 pb-1">
                                <div class="avatar flex-shrink-0 me-3">

                                    <img src="~/TEMA/assets/img/icons/unicons/chart.png" alt="User" class="rounded">
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <small class="text-muted d-block mb-1">Completed Project</small>

                                    </div>
                                    <div class="user-progress d-flex align-items-center gap-1">
                                        <h6 class="mb-0">@ViewBag.CompletedProject</h6>

                                    </div>
                                </div>
                            </li>
                            <li class="d-flex mb-4 pb-1">
                                <div class="avatar flex-shrink-0 me-3">
                                    <img src="~/TEMA/assets/img/icons/unicons/cc-success.png" alt="User" class="rounded">
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <small class="text-muted d-block mb-1">Uncompleted Project</small>

                                    </div>
                                    <div class="user-progress d-flex align-items-center gap-1">
                                        <h6 class="mb-0">@ViewBag.UncompletedProject</h6>

                                    </div>
                                </div>
                            </li>
                            <li class="d-flex mb-4 pb-1">
                                <div class="avatar flex-shrink-0 me-3">
                                    <img src="~/TEMA/assets/img/icons/unicons/wallet.png" alt="User" class="rounded">
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <small class="text-muted d-block mb-1">High priority</small>
                                        <h6 class="mb-0">Uncompleted</h6>
                                    </div>
                                    <div class="user-progress d-flex align-items-center gap-1">
                                        <h6 class="mb-0">@ViewBag.UnsuccesfulAndHigh</h6>

                                    </div>
                                </div>
                            </li>
                            <li class="d-flex">
                                <div class="avatar flex-shrink-0 me-3">
                                    <img src="~/TEMA/assets/img/icons/unicons/cc-warning.png" alt="User" class="rounded">
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <small class="text-muted d-block mb-1">Mid-priority</small>
                                        <h6 class="mb-0">Uncompleted</h6>
                                    </div>
                                    <div class="user-progress d-flex align-items-center gap-1">
                                        <h6 class="mb-0">@ViewBag.UnsuccesfulAndMid</h6>

                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
        </div>

    </div>
</div>
<script>
    $('#statisticsList').DataTable({
        language: {
            info: " _START_ - _END_ records are showed from _TOTAL_ ",
            infoEmpty: "There is no record to show.",
            loadingRecords: "Loading records",
            zeroRecords: "Table is empty.",
            search: "Search:",
            infoFiltered: "(filtered from total _MAX_ )",
            buttons: {
                copyTitle: "Copied to panel.",
                copySuccess: "%d row is copied to panel. ",
                copy: "Copy",
                print: "Print",
            },

            paginate: {
                first: "First",
                previous: "Previous",
                next: "After",
                last: "Last"
            },
        },
        dom: 'Bfrtip',
        buttons: [
            'copy', 'excel', 'pdf', 'print'
        ],
        responsive: true
    });
</script>